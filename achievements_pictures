from tkinter import *

from src.objects.window import Window


def close_achievements(root):
    from src.menu.menu import run_menu
    root.destroy()
    run_menu()


def run_achievements():
    root = Tk()
    root.protocol('WM_DELETE_WINDOW', lambda: close_achievements(root))

    WIDTH = 420
    HEIGHT = 720

    window = Window(root, title='Achievements', size=[WIDTH, HEIGHT], path_icon='./sprites/icon.ico', path_background_img='./sprites/backgrounds/window_background.png')

    achievements = [
        'Grew your first tree',
        'Grew your third tree',
        'Killed your first tree ):',
        'Killed your third tree ):',
        'Maxxed out garden!',
        'Made it through winter!',
        'Made it to day 365!',
        'Unlocked all skins!',
        'Killed all trees ):',
        'Mystery',
    ]

  image_paths = [
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/tree.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/3trees.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/dead_tree.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/killed%20trees.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/max%20garden.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/winter.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/1%20year.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/skins.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/forest.png",
       "https://github.com/ChuprinD/TreefinityGarden/blob/achievements1/mystery.png",
  ]

  for i, achievement in enumerate(achievements):
        image_url = image_paths[i]
      
        image = PhotoImage(file=image_url)

        canvas_image = window.canvas.create_image(100, 55 + i * 60, anchor='w', image=image)

        label = Label(root, text=achievement)
        label.place(x=200, y=50 + i * 60, anchor='w')

    window.root.mainloop()
